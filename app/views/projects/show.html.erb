        <tr>
          <td>
            <%= link_to issue.title, [@project, issue], :class =>"" %></td>
          <td>
            <%= issue.points_estimate.to_s %></td>
          <div class="pull-right">
          <td>
                <%= link_to '<i class="icon-pencil icon-white"></i>'.html_safe, edit_project_issue_path(@project, issue) %>
                </td><td>
                <%= link_to '<i class="icon-trash icon-white"></i>'.html_safe, [@project, issue], :method=>:delete, :confirm=>'Are you sure?' %></a>
            
