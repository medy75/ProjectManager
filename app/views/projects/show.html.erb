<p id="notice"><%= notice %></p>

<%= link_to '< Back to my projects', root_url, :class => "btn btn-small" %> | 
<%= link_to 'Edit project', edit_project_path(@project), :class => "btn btn-small" %>
<h1><%= @project.title %></h1>

<div class="row-fluid">
  <h4>Issues</h4>
  <div class="container">
    <div class="span2">
      <table class="table table-striped table-hover">
        <tr>New</tr>
        <% @new_issues.each do |issue| %>
          <tr>
            <td><%= link_to issue.title, [@project, issue], :class =>  "" %></td>
            <!--<td><%= link_to '<i class="icon-pencil icon-white"></i>'.html_safe, edit_polymorphic_path([@project, issue]) %></td>-->
          </tr>
        <% end %>
      </table>
    </div>
    <div class="span2">
      <table class="table table-striped table-hover">
        <tr>In progress</tr>
        <% @progress_issues.each do |issue| %>
          <tr>
            <td><%= link_to issue.title, [@project, issue], :class =>  "" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="span2">
      <table class="table table-striped table-hover">
        <tr>Test</tr>
        <% @test_issues.each do |issue| %>
          <tr>
            <td><%= link_to issue.title, [@project, issue], :class =>  "" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="span2">
      <table class="table table-striped table-hover">
        <tr>Done</tr>
        <% @done_issues.each do |issue| %>
          <tr>
            <td><%= link_to issue.title, [@project, issue], :class =>  "" %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="span4">
      <h4>Description:</h4>
      <%= @project.description %>

      <h4>Add issue</h4>
      <%= render 'issues/form' %>
    </div>
  </div>
</div>

