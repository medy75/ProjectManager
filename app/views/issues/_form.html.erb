<%= form_for([@project, @project.issues.build]) do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "wider-input" %>
  </div>
  <div class="field">
    <%= f.label :label %>
    <%= f.text_field :label, :class => "wider-input" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows=>4, :class => "wider-input" %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, ['new', 'in progress', 'testing', 'done'] %>
  </div>
  <div class="field">
    <%= f.label :estimate %>
    <%= f.number_field :estimate%>
  </div>
  <div class="actions">
    <%= f.submit 'Create issue', :class => "btn btn-medium btn-primary" %>
  </div>
<% end %>
