<p id="notice">
  <%= notice %></p>

<%= link_to '< Back to my projects', root_url, :class =>
"btn btn-small" %> |
<%= link_to 'Edit project', edit_project_path(@project), :class =>
"btn btn-small" %>
<h1>
  <%= @project.title %></h1>
<%= button_to_function 'Show description', "$('#description').toggle()" , :class =>
"btn btn-small" %>
|
<%= button_to_function 'Show stats', "$('#stats').toggle()" , :class =>
"btn btn-small" %>
|
<%= button_to_function 'Add issue', "$('#issueForm').toggle()", :class =>
"btn btn-small btn-primary"  %>
|
<%= button_to_function 'Show backlog', "$('#backlog').toggle()", :class =>
"btn btn-small"  %>
|
<%= button_to_function 'Hide done', "$('#done_iss').toggle()", :class =>
"btn btn-small"  %>
<div class="row-fluid">
  <div class="container">
    <div class="span8" id="stats" style="display:none">
      <div>
        <h4>Story points</h4>
        Remaining:
        <%= @remain_points %>
        Done:
        <%= @done_points %>
        Total:
        <%= @total_points %>
        <h4>Chart</h4>
        <img src="<%= @chart %>" /></div>
    </div>
    <div class="span8 offset2" id="issueForm" style="display:none">
      <div>
        <h4>Add issue</h4>
        <%= render 'issues/form' %></div>
    </div>
    <div class="span8" id="description" style="display:none">
      <div>
        <h4>Description</h4>
        <%= @project.description %></div>
    </div>
  </div>
</div>
<div class="row-fluid">
  <h4>Issues</h4>
  <div class="container">
    <div class="span3" id="backlog" style="display:none">
      <table class="table table-striped table-hover">
        <tr>BackLog</tr>
